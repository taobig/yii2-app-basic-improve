{
	"name": "taobig/yii2-app-basic-improve",
	"description": "A Project Based on Yii 2 Basic Project Template",
	"keywords": [
		"yii2",
		"framework",
		"basic",
		"project template"
	],
	"homepage": "https://github.com/taobig/yii2-app-basic-improve",
	"type": "project",
	"license": "MIT",
	"minimum-stability": "stable",
	"require": {
		"php": "^7.0 || ^8.0",
		"ext-json": "*",
		"yiisoft/yii2": "~2.0.14",
		"yiisoft/yii2-bootstrap": "~2.0.0",
		"taobig/yii-helper": "0.4.0",
		"edwinhaq/yii2-simple-loading": "^1.0",
		"taobig/php-helper": "^1.3 || ^2.0"
	},
	"require-dev": {
		"yiisoft/yii2-debug": "~2.1.0",
		"yiisoft/yii2-gii": "~2.1.0",
		"codeception/codeception": "^4.0",
		"codeception/verify": "~0.5.0 || ~1.1.0",
		"codeception/specify": "~0.4.6",
		"symfony/browser-kit": ">=2.7 <=4.2.4",
		"codeception/module-filesystem": "^1.0.0",
		"codeception/module-yii2": "^1.0.0",
		"codeception/module-asserts": "^1.0.0"
	},
	"config": {
		"process-timeout": 1800,
		"fxp-asset": {
			"enabled": false
		}
	},
	"scripts": {
		"post-install-cmd": [
			"yii\\composer\\Installer::postInstall"
		],
		"post-create-project-cmd": [
			"yii\\composer\\Installer::postCreateProject",
			"yii\\composer\\Installer::postInstall"
		]
	},
	"extra": {
		"yii\\composer\\Installer::postCreateProject": {
			"setPermission": [
				{
					"runtime": "0777",
					"web/assets": "0777",
					"yii": "0755"
				}
			]
		},
		"yii\\composer\\Installer::postInstall": {
			"generateCookieValidationKey": [
				"config/web.php"
			]
		}
	},
	"repositories": [
		{
			"type": "composer",
			"url": "https://asset-packagist.org"
		}
	],
	"support": {
		"issues": "https://github.com/yiisoft/yii2/issues?state=open",
		"forum": "http://www.yiiframework.com/forum/",
		"wiki": "http://www.yiiframework.com/wiki/",
		"irc": "irc://irc.freenode.net/yii",
		"source": "https://github.com/yiisoft/yii2"
	}
}